<%= form_with(model: @group_message, local: false) do |f| %>
    <%= render 'layouts/error_msg', model: @group_message %>
    <%= hidden_field_tag :group_id, group.id %>
    <div>
        <div class="d-flex"><%= f.text_field :body, class: 'form-control rounded-0', autocomplete: 'off' %>
        <%= f.submit '投稿', class: 'button button-purple w-25 rounded-0 py-1' %></div>
    </div>
<% end %>