<div class="row">
    <div class="col-md-8 offset-md-2 mt-2">
        <%= form_with(model: group, local: true) do |f| %>
            <%= render 'layouts/error_msg', model: group %>
            <div class="form-group">
                <%= f.label :name, 'グループ名', class: 'bold' %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :content, 'グループの紹介', class: 'bold' %>
                <%= f.text_area :content, class: 'form-control' %>
            </div>
            <%= f.submit text , class: 'button button-purple btn-block mt-5'%>
        <% end %>
    </div>
</div>