<div>
    <h2 class="text-center py-3">新規登録</h2>
</div>
<%= form_with(model: @user, local: true) do |f| %>
<%= render 'layouts/error_msg', model: f.object %>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="form-group">
                <%= f.label :name, '名前' %>
                <%= f.text_field :name, class: 'form-control mb-4' %>
            </div>
            <div class="form-group">
                <%= f.label :email, 'メール' %>
                <%= f.text_field :email, class: 'form-control mb-4' %>
            </div>
            <div class="form-group">
                <%= f.label :password, 'パスワード' %>
                <%= f.password_field :password, class: 'form-control mb-4' %>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, 'パスワード確認' %>
                <%= f.password_field :password_confirmation, class: 'form-control mb-5' %>
            </div>
            <%= f.submit '登録', class: 'button button-purple btn-block my-2' %>
        </div>
    </div>
<% end %>